<Window x:Class="RonVOReviver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:RonVOReviver.UI"
        mc:Ignorable="d"
        Title="VO Reviver" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ui:VOFileList x:Name="VOFileListOriginal" Title="{DynamicResource MainWindow.VOFileListOriginal.Title}" Select="VOFileListOriginal_FolderSelect" Grid.Row="0"/>
        <ui:VOFileList x:Name="VOFileListModded" Title="{DynamicResource MainWindow.VOFileListModded.Title}" Select="VOFileListModded_FolderSelect" Grid.Row="1"/>
        
        <Grid Grid.Row="2" Margin="5,2,5,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{DynamicResource MainWindow.TextBlockPakName.Text}" />
            <TextBox x:Name="TextBoxPakName" Grid.Column="1" Margin="1,1,1,1" Text="pakchunk-99_RevivedVO"/>
            <TextBlock Text=".pak" Grid.Column="2" />
        </Grid>

        <ui:VOFileList x:Name="VOFileListNew" Title="{DynamicResource MainWindow.VOFileListNew.Title}" Grid.Row="3"/>
        <Button Grid.Row="4" Content="{DynamicResource MainWindow.ButtonRevive.Content}" HorizontalAlignment="Center" Margin="1,1,1,1" FontSize="16"/>
        <StatusBar Grid.Row="5">
            <RadioButton x:Name="ButtonENUS" Content="English" GroupName="lang" IsChecked="True" Checked="ButtonENUS_Checked"/>
            <RadioButton x:Name="ButtonZHCN" Content="中文" GroupName="lang" Checked="ButtonZHCN_Checked"/>
            <TextBlock x:Name="TextBlockProgress" TextWrapping="Wrap"/>
        </StatusBar>
    </Grid>
</Window>
